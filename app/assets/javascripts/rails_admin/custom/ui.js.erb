//= require dropzone

$(document).ready(function(){
    // disable auto discover
    Dropzone.autoDiscover = true;

    var dropzone = new Dropzone (".dropzone", {
        maxFilesize: 256, // Set the maximum file size to 256 MB
        paramName: "album[second_attr][]", // Rails expects the file upload to be something like model[field_name]
        addRemoveLinks: true, // Don't show remove links on dropzone itself.

        // Translations
        dictDefaultMessage: "<%= I18n.t('admin.actions.multiple_upload.dictDefaultMessage') %>",
        dictFallbackMessage: "<%= I18n.t('admin.actions.multiple_upload.dictFallbackMessage') %>",
        dictFallbackText: "<%= I18n.t('admin.actions.multiple_upload.dictFallbackText') %>",
        dictFileTooBig: "<%= I18n.t('admin.actions.multiple_upload.dictFileTooBig') %>",
        dictInvalidFileType: "<%= I18n.t('admin.actions.multiple_upload.dictInvalidFileType') %>",
        dictResponseError: "<%= I18n.t('admin.actions.multiple_upload.dictResponseError') %>",
        dictCancelUpload: "<%= I18n.t('admin.actions.multiple_upload.dictCancelUpload') %>",
        dictCancelUploadConfirmation: "<%= I18n.t('admin.actions.multiple_upload.dictCancelUploadConfirmation') %>",
        dictRemoveFile: "<%= I18n.t('admin.actions.multiple_upload.dictRemoveFile') %>",
        dictMaxFilesExceeded: "<%= I18n.t('admin.actions.multiple_upload.dictMaxFilesExceeded') %>"
    });
});